<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/questGroupLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="23dp"
        app:cardElevation="15dp">

        <ImageView
            android:id="@+id/cardFon"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:src="@drawable/quest_group_shape_1" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="1. Целеустремленность"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/icon"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="96dp"
            android:src="@drawable/purpose" />

        <ImageView
            android:id="@+id/quests"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="270dp"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="96dp"
            android:src="@drawable/quest" />

        <TextView
            android:id="@+id/tasksOpen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="240dp"
            android:layout_marginTop="200dp"
            android:gravity="center_horizontal"
            android:text="Заданий выполнено:"
            android:textColor="@color/white"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/chet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="230dp"
            android:layout_marginTop="250dp"
            android:gravity="center_horizontal"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="310dp"
            android:layout_marginEnd="20dp"
            android:gravity="center_horizontal"
            android:text="@string/quest_group_description_1"
            android:textColor="@color/white"
            android:textSize="23sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="407dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/shape_quest_group_card_button"
            android:text="Вперед!"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="23sp" />
    </androidx.cardview.widget.CardView>
</RelativeLayout>