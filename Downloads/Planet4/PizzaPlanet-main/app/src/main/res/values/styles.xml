<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Стиль для TextView с id "pizza_name" -->
    <style name="PizzaNameTextStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Стиль для TextView с id "pizza_venue_price" -->
    <style name="PizzaPriceTextStyle" parent="android:TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/accent</item>
    </style>

    <!-- Стиль для ImageView с id "pizza_image" -->
    <style name="PizzaImageStyle">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <!-- Стиль для TextView с id "pizza_composition" -->
    <style name="PizzaCompositionTextStyle" parent="android:TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <!-- Стиль для ImageButton с id "basket" -->
    <style name="PizzaBasketImageButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_basket</item>
        <item name="android:layout_gravity">end|top</item>
        <item name="android:layout_margin">8dp</item>
    </style>

</resources>
