<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pumpwimo.activities.BoardActivity"
    android:background="@drawable/bg_board">

    <androidx.cardview.widget.CardView
        android:layout_width="250dp"
        android:layout_height="216dp"
        android:layout_marginStart="85dp"
        android:layout_marginTop="70dp"
        app:cardBackgroundColor="#FFA358"
        app:cardCornerRadius="28dp"
        app:cardElevation="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="27dp"
            android:src="@drawable/mini_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="27dp"
            android:gravity="center"
            android:text="Тестирование"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:gravity="center"
            android:text="Приложение PumpWiMo готово к этапу тестирования!\nУрааа!!!!"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/menu_1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="14dp"
        android:src="@drawable/ic_select"
        android:focusable="true"
        android:clickable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/acc"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="14dp"
        android:focusable="true"
        android:clickable="true"
        android:src="@drawable/bear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/fist"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="305dp"
        android:background="@drawable/round_outline"
        android:contentDescription="@string/app_name"
        android:padding="4dp"
        android:src="@drawable/ic_fist"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="155dp"
        android:layout_marginTop="304dp"
        android:src="@drawable/logo_inscrition"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardTheGuideBook"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="390dp"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="#FD7F1F"
        app:cardCornerRadius="40dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Гайдбук"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="208dp"
        android:layout_marginTop="5dp"
        android:scrollbars="none"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardTheGuideBook"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardTask1"
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="17dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="#FA216B"
                app:cardCornerRadius="20dp"
                app:cardElevation="7dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="9dp"
                    android:layout_marginTop="17dp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/task" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="134dp"
                    android:layout_marginBottom="5dp"
                    android:text="Задания"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardTask2"
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="17dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="#B50FD1"
                app:cardCornerRadius="20dp"
                app:cardElevation="7dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="9dp"
                    android:layout_marginTop="17dp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/rating_2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="134dp"
                    android:layout_marginBottom="5dp"
                    android:text="Рейтинг"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardTask3"
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="17dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="#3BBCF6"
                app:cardCornerRadius="20dp"
                app:cardElevation="7dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="9dp"
                    android:layout_marginTop="17dp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/friends_1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="134dp"
                    android:layout_marginBottom="5dp"
                    android:text="Друзья"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardTask4"
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="10dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="#FDCE3E"
                app:cardCornerRadius="20dp"
                app:cardElevation="7dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="9dp"
                    android:layout_marginTop="17dp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/award" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="134dp"
                    android:layout_marginBottom="5dp"
                    android:text="Награды"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/horizontalScrollView"
        android:layout_marginStart="10dp"
        android:orientation="horizontal"
        android:scrollbars="none"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>